<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.bid.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>com.bid.server.LoginService</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>getCategoriesServlet</servlet-name>
    <servlet-class>com.bid.server.GetCategoriesService</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>getDyingItemsServlet</servlet-name>
    <servlet-class>com.bid.server.GetDyingItemsService</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>getItemServlet</servlet-name>
    <servlet-class>com.bid.server.GetItemService</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>itemBidServlet</servlet-name>
    <servlet-class>com.bid.server.ItemBidService</servlet-class>
  </servlet>

  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/bid/greet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/login_module/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>getCategoriesServlet</servlet-name>
    <url-pattern>/browse_module/getCategories</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>getDyingItemsServlet</servlet-name>
    <url-pattern>/browse_module/getDyingItems</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>getItemServlet</servlet-name>
    <url-pattern>/itemBid_module/getItem</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>getCategoriesServlet</servlet-name>
    <url-pattern>/itemBid_module/itemBid</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Bid.html</welcome-file>
  </welcome-file-list>

</web-app>
